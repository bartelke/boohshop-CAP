<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic">
    <Shell>
        <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
            <semantic:titleHeading showNavButton="true" navButtonPress=".onNavBack">
                <Title text="{i18n>BooksTitle}" level="H2" />
            </semantic:titleHeading>

            <semantic:content>
                <Table
                    id="table"
                    width="auto"
                    items="{
                    path: '/Books',
                    sorter: {
                        path: 'title',
                        descending: false
                    }
                }"
                    growing="true"
                    growingScrollToLoad="true"
                    updateFinished=".onUpdateFinished"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <ToolbarSpacer />
                            <SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch">
                                <layoutData>
                                    <OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow" />
                                </layoutData>
                            </SearchField>
                        </OverflowToolbar>
                    </headerToolbar>

                    <columns>
                        <Column id="nameColumn" />
                        <Column id="unitNumberColumn" hAlign="End" />
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <ObjectIdentifier title="{title}" />
                                <ObjectNumber number="{
                                    path: 'stock',
                                    formatter: '.formatter.numberUnit'
                                }" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </semantic:content>
        </semantic:SemanticPage>
    </Shell>
</mvc:View>
