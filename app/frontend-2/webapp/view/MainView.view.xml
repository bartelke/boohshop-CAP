<mvc:View controllerName="sdk.frontend2.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:semantic="sap.f.semantic">
    <Shell>
        <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false" >
            <semantic:titleHeading>
                <Title text="{i18n>title}" level="H2" />
            </semantic:titleHeading>
            <semantic:content>
                <GenericTile header="{i18n>BooksTitle}" press=".onBooksPress">
                    <TileContent footer="{i18n>booksTileFooter}">
                        <ImageContent src="sap-icon://newspaper" />
                    </TileContent>
                </GenericTile>
            </semantic:content>
        </semantic:SemanticPage>
    </Shell>
</mvc:View>
