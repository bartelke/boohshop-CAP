<mvc:View controllerName="sdk.frontend2.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:semantic="sap.f.semantic">
    <Shell>
        <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
            <semantic:titleHeading>
                <Title text="{i18n>AuthorsTitle}" level="H2" />
            </semantic:titleHeading>
            <semantic:content>
                <Table
                    id="table"
                    width="auto"
                    items="{
                    path: '/Authors',
                    sorter: {
                        path: 'name',
                        descending: false
                    }
                }"
                    noDataText="{worklistView>/tableNoDataText}"
                    busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                    growing="true"
                    growingScrollToLoad="true"
                    updateFinished=".onUpdateFinished"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title id="tableHeader" text="{i18n>AuthorsTitle}" level="H3" />
                            <ToolbarSpacer />
                            <SearchField id="searchField" tooltip=" " search=".onSearch">
                                <layoutData>
                                    <OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow" />
                                </layoutData>
                            </SearchField>
                        </OverflowToolbar>
                    </headerToolbar>

                    <columns>
                        <Column id="nameColumn" />
                    </columns>

                    <items>
                        <ColumnListItem type="Navigation" press=".onPress">
                            <cells>
                                <ObjectIdentifier title="{name}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </semantic:content>
        </semantic:SemanticPage>
    </Shell>
</mvc:View>
